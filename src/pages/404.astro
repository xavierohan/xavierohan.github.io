---
import { SITE } from "@config";
import Layout from "@layouts/Layout.astro";
---

<Layout title={`Error - ${SITE.title}`}>
  <div class="font-bold absolute h-fit inset-0 m-auto text-center" style="min-height: 60vh; display: flex; flex-direction: column; justify-content: center; align-items: center;">
    <p id="emoji" text="5xl" style="font-size: 4rem; margin-bottom: 1rem;"></p>
    <h1 text-2xl mt-5 mb-4>How did we get here....</h1>
    <div class="flex flex-col sm:flex-row gap-4 items-center justify-center mt-6">
      <a href="/" class="text-xl hover:underline px-6 py-2 border border-c-dark rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors">
        Go back to Home
      </a>
      <button onclick="window.history.back()" class="text-xl hover:underline px-6 py-2 border border-c-dark rounded hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors bg-transparent cursor-pointer">
        Go back
      </button>
    </div>
  </div>
</Layout>

