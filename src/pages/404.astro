  function updateEmoji() {
    if (emoji) {
      // Pick a different emoji
      let newIndex;
      do {
        newIndex = Math.floor(Math.random() * emojiArray.length);
      } while (newIndex === currentIndex && emojiArray.length > 1);
      
      currentIndex = newIndex;
      emoji.textContent = emojiArray[currentIndex];
    }
  }
  
  // Update immediately
  updateEmoji();
  
  // Update every 2 seconds
  setInterval(updateEmoji, 2000);
